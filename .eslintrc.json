{
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb"
  ],
  "rules": {
    "no-set-state": "off",
    // todo rules to enable later
    "react/jsx-filename-extension": "off",
    "no-shadow": "off",
    "react/prop-types": "off",
    "object-curly-newline": "off"
  }
}